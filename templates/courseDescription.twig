    <!-- onClick JavaScript that toggles .disabled -->
    <script>
        let input_disabled = false;
        let inputs = document.getElementById("edit_course_description").getElementsByTagName('input');
        let selects = document.getElementById("edit_course_description").getElementsByTagName('select');
        let textareas = document.getElementById("edit_course_description").getElementsByTagName('textarea');
        let btUpdate = document.getElementById("bt_update_course_description");

        function toggle_inputs() {
            <!-- Toggle all fields -->
            for (let i = 0; i < inputs.length; i++) {
                inputs[i].disabled = input_disabled;
            }

            for (let i = 0; i < selects.length; i++) {
                selects[i].disabled = input_disabled;
            }

            for (let i = 0; i < textareas.length; i++) {
                textareas[i].disabled = input_disabled;
            }

            btUpdate.hidden = input_disabled;


            if (input_disabled) {
                input_disabled = false;
            } else {
                input_disabled = true;
            }
        }
    </script>
